<%- include('../partials/header'); -%>
<h1>
    <%= title %>
</h1>
<p>
    <%= content %>
</p>

<div>
    <% newPost.forEach((post) => { %>
    <h1><%= post.title %></h1>
    <p>
        <%= post.content.substring(0, 100)+ "..." %> <a href="/pages/<%= post.title %>">Read More</a>
    </p>
   <% }) %>
</div>
<br>

<div class="form-group">
    <form action="/compose" method="GET">
        <button type="submit" class="btn btn-primary">Compose</button>
    </form>
</div>

<%- include('../partials/footer'); -%>